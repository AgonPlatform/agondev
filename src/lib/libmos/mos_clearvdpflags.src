	.assume	adl=1
	.include "agon/mos.inc"
	.section .text
	.global	_mos_clearvdpflags
_mos_clearvdpflags:
    pop de
    ex (sp), hl
    push de
    ld c, l                     ; Bitmask of flags to clear
    ld      a,  mos_clearvdpflags
    rst.lil 08h                 ; returns New VDP flags in A
    ret
    
