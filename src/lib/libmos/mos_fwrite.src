	.assume	adl =1
	.include "agon/mos.inc"
	.section .text
	.global  _mos_fwrite
_mos_fwrite:
	push	ix
	ld 	ix, 0
	add 	ix, sp
	ld 	bc, (ix+6)			; file handle
	ld	hl, (ix+9)			; buffer address
	ld	de, (ix+12)			; number of bytes to write
	ld a,	mos_fwrite
	rst.lil	08h
	ex	de, hl				; number of bytes written
	pop	ix
	ret
