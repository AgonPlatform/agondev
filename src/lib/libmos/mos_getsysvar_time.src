	.assume	adl =1
	.include "agon/mos.inc"
	.section .text
	.global	_getsysvar_time
;unit32_t getsysvar_time()
_getsysvar_time:
  ld  iy, (_sys_vars)     ; pointer to the system variables
	ld	hl, (iy+sysvar_time)		; get the 3 least significant bytes
	ld 	e,  (iy+sysvar_time+3) 	; get the most signiciant byte
	ret
