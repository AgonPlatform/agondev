	.assume	adl =1
	.include "agon/mos.inc"
	.section .text
	.global	_mos_fopen
_mos_fopen:
	push	ix
	ld	ix, 0
	add	ix, sp
	ld	hl, (ix+6)			; address to 0-terminated filename in memory
	ld	c,  (ix+9)			; mode : fa_read / fa_write etc
	ld	a, mos_fopen
	rst.lil	08h				; returns filehandle in A
	ld	sp, ix
	pop	ix
	ret	
