	.assume	adl=1
	.include "agon/mos.inc"
	.section .text
	.global	_ffs_stat
_ffs_stat:
    push    ix
    ld      ix, 0
    add     ix, sp
    
    ld      hl, (ix+6)          ; Pointer to a FILINFO structure
    ld      de, (ix+9)          ; Pointer to a C (zero-terminated) filename string
    ld      a,  ffs_stat
    rst.lil 08h                 ; returns FRESULT in A

    ld      sp, ix
    pop     ix
    ret
    