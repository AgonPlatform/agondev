	.assume	adl=1
	.section .text
  .global _inputPort

_inputPort:
    push    ix
    ld      ix, 0
    add     ix, sp

    ld      a, (ix+6)  ; Port ID
    ld      (direct), a
    .db     0xED
    .db     0x38       ; IN0 A, (n)
direct:
    .db     0          ; will be overwritten by actual Px_DR

end:
    pop     ix
    ret
